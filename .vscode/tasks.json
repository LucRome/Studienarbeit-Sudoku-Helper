{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests for Validation",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "options": {
                "cwd": "${workspaceFolder}/src/backend"
            },
            "args": [
                "-m",
                "unittest",
                "validation.test_validation",
                "algorithms.test_algorithms",
                "sudoku.tests",
                "algorithms.test_utils"
            ]
        },
        {
            "label": "Run Server",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "options": {
                "cwd": "${workspaceFolder}/src/backend"
            },
            "args": [
                "manage.py",
                "runserver"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Frontend Tests",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "args": [
                "-m",
                "unittest",
                "frontend_tests.algorithm_pages.test_hidden_single",
                // "frontend_tests.test_index",
                // "frontend_tests.test_verified",
                // "frontend_tests.algorithm_pages",
                "-v"
            ],
            "problemMatcher": []
        }
    ]
}